{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["ES2020", "DOM"],
    "types": ["chrome"],
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["scripts/**/*.ts", "background.ts"],
  "exclude": ["node_modules"]
} 