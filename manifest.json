{
  "manifest_version": 3,
  "name": "집중 시간 도우미 (Focus Time Helper)",
  "version": "1.0",
  "description": "집중과 휴식 시간을 관리하는 타이머 확장프로그램",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "pages/dashboard.html"
} 