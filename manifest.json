{
  "manifest_version": 3,
  "name": "포모도로 타이머",
  "version": "1.0",
  "description": "집중 시간과 휴식 시간을 관리하는 포모도로 타이머",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 