{
  "manifest_version": 3,
  "name": "집중 시간 도우미 (Focus Time Helper)",
  "version": "1.0",
  "description": "집중 시간을 관리하고 생산성을 높이는 도우미",
  "action": {
    "default_icon": {
      "16": "icons/pomolog_icon_16x16.png",
      "48": "icons/pomolog_icon_48x48.png",
      "128": "icons/pomolog_icon_128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus",
    "offscreen",
    "downloads"
  ],
  "web_accessible_resources": [
    {
      "resources": ["sounds/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/pomolog_icon_16x16.png",
    "48": "icons/pomolog_icon_48x48.png",
    "128": "icons/pomolog_icon_128x128.png"
  },
  "options_page": "pages/dashboard.html"
} 